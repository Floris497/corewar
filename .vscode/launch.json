{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch VM",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/srcs/vm/corewar",
      "args": [
        "${workspaceFolder}/resources/42-AI/champions/skynet.cor",
        "${workspaceFolder}/resources/42-AI/champions/_.cor",
        "${workspaceFolder}/resources/42-AI/champions/fluttershy.cor",
        "${workspaceFolder}/resources/42-AI/champions/skynet.cor",
        "-v"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
  ]
}
